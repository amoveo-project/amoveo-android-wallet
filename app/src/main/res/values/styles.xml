<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="BottomNavigationStyle" parent="AppTheme">
        <item name="accentColor">@color/blue</item>
        <item name="translucentNavigationEnabled">false</item>
    </style>
    <style name="MainButtonYellow">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/size250</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:background">@drawable/button_border_yellow</item>
    </style>
    <style name="MainButtonBlack">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text32</item>
        <item name="android:paddingStart">@dimen/size40</item>
        <item name="android:paddingEnd">@dimen/size40</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/button_border_black</item>
    </style>
    <style name="MainButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginRight">@dimen/size250</item>
        <item name="android:layout_marginLeft">@dimen/size250</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:background">@drawable/button_border_yellow</item>
    </style>
    <style name="MainButtonWhite">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_border_white</item>
    </style>
    <style name="LinkButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text32</item>
        <item name="android:textColor">@color/transparent_dark_gray</item>
    </style>
    <style name="CustomSubstrate">
        <item name="android:background">@drawable/rectangle_white</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="MainSubstrate" parent="CustomSubstrate">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginRight">@dimen/size25</item>
        <item name="android:layout_marginLeft">@dimen/size25</item>
    </style>
    <style name="FullSubstrate" parent="MainSubstrate">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/size140</item>
        <item name="android:layout_marginBottom">@dimen/size25</item>
    </style>
    <style name="CenterBlueLogo">
        <item name="android:layout_width">@dimen/size250</item>
        <item name="android:layout_height">@dimen/size250</item>
        <item name="android:background">@drawable/ic_logo_app</item>
        <item name="android:layout_marginTop">@dimen/size63</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="MainTextInputLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/size40</item>
        <item name="android:layout_marginRight">@dimen/size40</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="MainDialogTextInputLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/size40</item>
        <item name="android:layout_marginRight">@dimen/size40</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="MainInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text32</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/text_color</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="MainInputEditTextBlack">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text32</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHint">@color/text_color</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="MultiInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text32</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/transparent_dark_gray</item>
        <item name="android:textColorHint">@color/transparent_gray</item>
        <item name="android:singleLine">false</item>
    </style>
    <style name="MainButtonTextLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text24</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/transparent_dark_gray</item>
    </style>
    <style name="LeftTextInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/size63</item>
        <item name="android:textSize">@dimen/text32</item>
        <item name="android:textColor">@color/transparent_dark_gray</item>
    </style>
    <style name="MainTextInfo" parent="LeftTextInfo">
        <item name="android:layout_marginRight">@dimen/size63</item>
    </style>

    <style name="MainTextInfoHint" parent="MainTextBlock">
        <item name="android:textSize">@dimen/text24</item>
        <item name="android:textColor">@color/transparent_gray</item>
    </style>
    <style name="MainTextBlock" parent="LeftTextBlock">
        <item name="android:layout_marginRight">@dimen/size63</item>
    </style>
    <style name="LeftTextBlock">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/size63</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/main_background</item>
        <item name="android:textColorSecondary">@color/main_background</item>
        <item name="android:background">@color/white</item>
        <item name="colorPrimary">@color/transparent_gray</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="actionMenuTextColor">@color/main_background</item>
    </style>

    <style name="ToolBarInverseStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/yellow</item>
        <item name="android:textColorSecondary">@color/yellow</item>
        <item name="android:background">@color/main_background</item>
        <item name="colorPrimary">@color/transparent_gray</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="actionMenuTextColor">@color/main_background</item>
    </style>

    <style name="MainEditTextContrastHint" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorHint">#aeafb6</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/size63</item>
        <item name="android:layout_marginRight">@dimen/size63</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>


    <style name="EditTextContrastHint" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@android:color/white</item>
        <item name="colorPrimary">#aeafb6</item>
        <item name="colorPrimaryDark">#aeafb6</item>

        <item name="android:textColorSecondary">#aeafb6</item>

        <item name="android:textColorHint">#aeafb6</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>
</resources>
