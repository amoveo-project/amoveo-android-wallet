<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/main_background">

    <include layout="@layout/toolbar_inverse"
             app:layout_scrollFlags="scroll|enterAlways"/>

    <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/mnemonic"
            style="@style/MultiInputEditText"
            android:lines="4"
            android:layout_marginLeft="@dimen/size40"
            android:layout_marginRight="@dimen/size40"
            android:layout_marginTop="@dimen/size160"
            android:padding="@dimen/size40"
            android:gravity="top"
            android:background="@drawable/rectangle_white"
            android:inputType="textMultiLine"/>
</FrameLayout>