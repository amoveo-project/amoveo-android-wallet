<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/main_background">

    <include layout="@layout/toolbar_inverse"
             app:layout_scrollFlags="scroll|enterAlways"/>

    <android.support.design.widget.TextInputLayout
            android:id="@+id/node_address_layout"
            style="@style/EditTextContrastHint"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/size40"
            android:layout_marginEnd="@dimen/size40"
            android:layout_marginTop="@dimen/size160">
        <com.devspark.robototextview.widget.RobotoEditText
                android:id="@+id/node_address"
                style="@style/MainInputEditText"
                android:hint="@string/prompt_node_address"
                android:textColorHint="@color/white"
                app:backgroundTint="@color/white"/>
    </android.support.design.widget.TextInputLayout>

    <com.devspark.robototextview.widget.RobotoButton
            android:id="@+id/restore_default"
            style="@style/MainButtonWhite"
            android:layout_width="@dimen/size360"
            android:layout_marginBottom="@dimen/size40"
            android:layout_marginStart="@dimen/size40"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:textAllCaps="false"
            android:text="@string/restore_default"/>
</RelativeLayout>