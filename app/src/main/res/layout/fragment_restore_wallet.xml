<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/main_background">

    <include layout="@layout/toolbar"
             app:layout_scrollFlags="scroll|enterAlways"/>

    <android.support.design.widget.TabLayout
            android:id="@+id/tab_restore_methods"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size95"
            android:layout_marginTop="@dimen/size110"
            android:gravity="center"
            android:layout_gravity="top|center_horizontal"
            android:background="@color/white"
            app:layout_scrollFlags="scroll|enterAlways"
            app:tabGravity="center"
            app:tabIndicatorColor="@color/white"
            app:tabIndicatorHeight="@dimen/size4"
            app:tabMinWidth="@dimen/size160"
            app:tabMaxWidth="@dimen/size400"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/main_background"
            app:tabTextColor="@color/gray1"/>

    <com.amoveo.amoveowallet.widget.StrongViewPager
            android:id="@+id/pager_restore_methods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size200"
            android:background="@color/white"
            android:layout_gravity="bottom"/>
</FrameLayout>